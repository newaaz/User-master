<div class="container mt-4">
  <h2>New User</h2>

  <%= form_with(model: @user) do |f| %>
    <div id="forms_errors">
      <%= render 'shared/errors', object: f.object %>
    </div>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :surname %>
      <%= f.text_field :surname, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :patronymic %>
      <%= f.text_field :patronymic, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :age %>
      <%= f.number_field :age, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :nationality %>
      <%= f.text_field :nationality, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :country %>
      <%= f.text_field :country, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :gender %>
      <%= f.select :gender, User::VALID_GENDERS, {}, class: 'form-control' %>
    </div>

    <div class="form-group">
      <h4>Interests</h4>
      <div class="checkbox-group">
        <%= f.collection_check_boxes :interests, @interests ,:name, :name do |b| %>
          <div class="form-check">
            <%= b.check_box(class: 'form-check-input') %>
            <%= b.label(class: 'form-check-label') %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <h4>Skills</h4>
      <div class="checkbox-group">
        <%= f.collection_check_boxes :skills, @skills, :name, :name do |b| %>
          <div class="form-check">
            <%= b.check_box(class: 'form-check-input') %>
            <%= b.label(class: 'form-check-label') %>
          </div>
        <% end %>
      </div>
    </div>

    <%= f.submit 'Create User', class: 'btn btn-primary' %>
  <% end %>
</div>
